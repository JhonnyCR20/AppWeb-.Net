<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppHotelBeachSA</title>
    <link rel="stylesheet" href="~/css/Lux.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppHotelBeachSA.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
         
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/css/img/logo.png" alt="Logo del hotel" class="logo" style="object-fit: cover; border-radius: 75%; width: 100px; height: auto; max-width: 100%;">
                    
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav dropdown flex-grow-1">
                       
                        @*Inicio del dropdown*@
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>

                        </li>
                        

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown navbar-collapse">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Administracion</a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Clientes" asp-action="Index">Lista de Clientes</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Reservacion" asp-action="Index">Lista Reservaciones</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Clientes" asp-action="CrearCliente">Crear Cliente</a>
                                    </li>
                                </ul>
                            </li>
                           
                        }

                       
                        
                        @if ((User.Identity.IsAuthenticated && User.IsInRole("Particular")) || User.IsInRole("Admin"))
                        {
                        

                            <li class="nav-item navbar-collapse">
                                <a class="nav-link text-white" asp-area="" asp-controller="Reservacion" asp-action="ValidarCliente">Reservar</a>
                            </li>
                        }


                        <li class="nav-item navbar-collapse">
                            <a class="nav-link text-white" asp-area="" asp-controller="Paquetes" asp-action="Index">Lista Paquetes</a>
                        </li>


                        
                    </ul>
                </div>
                @*Menu de opcines autenticaciones*@
                <ul class="navbar-nav navbar-collapse-right d-sm-inline-flex justify-content-between">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="" asp-action="">Hola @User.Identity.Name</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="Logout">Cerrar sessión</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="Login">Iniciar Sesion</a>
                        </li>
                    }
                </ul>
               
               

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - AppHotelBeachSA - <a asp-area="" asp-controller="Home" asp-action="Home"></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
