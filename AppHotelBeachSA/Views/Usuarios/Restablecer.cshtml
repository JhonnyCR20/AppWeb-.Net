@model AppHotelBeachSA.Models.SeguridadRestablecer
@{
    ViewData["Title"] = "Restablecer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<center><h1>Restablecer</h1></center>


<div class="container">
    <div class="row">
        <div class="col-md-4"></div>

        @*Formulario para restablecer contraseña*@
        <div class="col-md-4">
            @if (TempData["MensajeError"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                    <strong>@TempData["MensajeError"]</strong>
                </div>
            }

            <form asp-action="Restablecer" method="post" id="FormularioRestablecer" class="Formularios">
                <div class="form-group">
                    <label asp-for="Password" class="form-label">Contraseña Actual</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NuevoPassword" class="form-label">Nueva Contraseña</label>
                    <input asp-for="NuevoPassword" class="form-control" />
                    <span asp-validation-for="NuevoPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Confirmar" class="form-label">Confirmar Contraseña</label>
                    <input asp-for="Confirmar" class="form-control" />
                    <span asp-validation-for="Confirmar" class="text-danger"></span>

                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Aceptar" class="btn btn-primary" />
                </div>

            </form>
        </div>

        <div class="col-md-4"></div>

    </div>
</div>